[color]
    autocrlf = false
    editor = vim
    ignorecase = false
    quotepath = false
    ui = auto

[credential]
    helper = osxkeychain

[fetch]
    prune = true

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[github]
    user = yukihira1992

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[pager]
    log = /opt/homebrew/share/git-core/contrib/diff-highlight/diff-highlight | less
    show = /opt/homebrew/share/git-core/contrib/diff-highlight/diff-highlight | less
    diff= /opt/homebrew/share/git-core/contrib/diff-highlight/diff-highlight | less

[pull]
    ff = only
    prune = true

[push]
    default = current
    autoSetupRemote = true

[user]
    name = Takayuki Hirayama
    email = hirayama@atama.plus

[secrets]
    providers = git secrets --aws-provider
    patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
    patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
    patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
    allowed = AKIAIOSFODNN7EXAMPLE
    allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

